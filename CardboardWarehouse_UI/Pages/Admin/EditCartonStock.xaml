<Page x:Class="CardboardWarehouse_UI.Pages.Admin.EditCartonStock"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CardboardWarehouse_UI.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditCartonStock">

    <Grid>
        <Label Content="Edit Stock" FontSize="30" HorizontalAlignment="Center" Margin="0,0,0,401"/>
        <DataGrid Width="250" MouseDoubleClick="CartonSelected" x:Name="CartonsGrid" Margin="452,121,98,68"  IsReadOnly="True" RowHeaderWidth="0" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="X" Binding="{Binding X}" />
                <DataGridTextColumn Header="Y" Binding="{Binding Y}" />
                <DataGridTextColumn Header="Count" Binding="{Binding Count}"/>
            </DataGrid.Columns>

        </DataGrid>
        <Button x:Name="BtnDeletCarton" Background="DarkRed" Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="608,93,0,0" Click="BtnDeletCarton_Click"  />
        <Button x:Name="BtnIncrement" Background="Green" Content="Increment" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="455,93,0,0" Click="BtnIncrement_Click"  />
        <Button x:Name="BtnDecrement" Content="Decrement" Background="DarkCyan" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="529,93,0,0" Click="BtnDecrement_Click"  />
        <TextBox x:Name="TxtX" Width="100" Height="30" Margin="286,285,414,135" />
        <TextBox x:Name="TxtY" Width="100" Height="30" Margin="286,222,414,198" />
        <TextBox x:Name="TxtCount" Width="100" Height="30" Margin="286,163,414,257" />
        <Button Width="100" x:Name="BtnAddCarton" Content="Add" Background="DarkGreen" Height="30" Margin="286,338,414,82" Click="BtnAddCarton_Click"  />
    </Grid>
</Page>
