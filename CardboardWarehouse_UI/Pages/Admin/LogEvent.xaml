<Page x:Class="CardboardWarehouse_UI.Pages.Admin.LogEvent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CardboardWarehouse_UI.Pages.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogEvent">

    <Grid>
        <DataGrid x:Name="systemEventGrid" Margin="193,110,274,79"  IsReadOnly="True" RowHeaderWidth="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Event Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Date Profit" Binding="{Binding Data}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Best sellers" Foreground="DarkGreen" FontSize="30" x:Name="TxtTotalProfit_Copy1" HorizontalAlignment="Left" Margin="275,60,0,0" VerticalAlignment="Top" Width="166"/>
        <Button Content="Clear Log Event" Name="BtnClearLogEvent" Background="Red" HorizontalAlignment="Left" Margin="471,75,0,0" VerticalAlignment="Top" Width="102" Click="BtnClearLogEvent_Click"/>
    </Grid>
</Page>
